<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.owl.project.dao.ProjectDao">
	<select id="getProjectList"  resultType="com.owl.project.dto.ProjectList" parameterType="String">
		SELECT p.PROJECTIDX, p.PROJECTNAME, l.FAVORITE, l.PROJECTCOLOR, l.AUTHORITY FROM PROJECT p JOIN PROJECTLIST l 
		ON p.PROJECTIDX=l.PROJECTIDX where l.EMAIL = #{email}
	</select>

